<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <PublishTrimmed>true</PublishTrimmed>
    
    <NoWarn>$(NoWarn);CS7022;IL2104</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\libs\OpenApiGenerator.Helpers\OpenApiGenerator.Helpers.csproj" />
    <ProjectReference Include="..\OpenApiGenerator.IntegrationTests.Twitch\OpenApiGenerator.IntegrationTests.Twitch.csproj" />
    <ProjectReference Include="..\OpenApiGenerator.IntegrationTests.IpInfo\OpenApiGenerator.IntegrationTests.IpInfo.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TrimmerRootAssembly Include="OpenApiGenerator.IntegrationTests.IpInfo" />
    <TrimmerRootAssembly Include="OpenApiGenerator.IntegrationTests.IpInfo.Data" />
    <TrimmerRootAssembly Include="OpenApiGenerator.IntegrationTests.Twitch" />
    <TrimmerRootAssembly Include="OpenApiGenerator.IntegrationTests.Twitch.Data" />
    <!-- <TrimmerRootAssembly Include="OpenApiGenerator.Helpers" /> -->
  </ItemGroup>

  <PropertyGroup Label="Publish">
    <RuntimeIdentifier Condition="$([MSBuild]::IsOSPlatform('windows'))">win-x64</RuntimeIdentifier>
    <RuntimeIdentifier Condition="!$([MSBuild]::IsOSPlatform('windows'))">osx-arm64</RuntimeIdentifier>

    <SelfContained>true</SelfContained>
  </PropertyGroup>

  <Target Name="ProduceTrimmingWarnings" AfterTargets="Build">
    <CallTarget Targets="Publish"/>
  </Target>

</Project>
